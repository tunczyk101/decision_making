<AddExpertiseScreen>:
    FloatLayout:
        MDTopAppBar:
            title: "Compare"
            md_bg_color: app.theme_cls.primary_light
            left_action_items: [['keyboard-backspace', lambda x: app.change_screen("home_screen", "None")]]
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .1

        MDLabel:
            id: question_label
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            halign: "center"


        MDLabel:
            id: compare_label
            text: "1 : 1"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            halign: "center"

        MDSlider
            id: slider
            color: "blue"
            track_color_active: "green"
            track_color_inactive: "green"
            hint: False
            min: -8
            max: 8
            step: 1
            value: 0
            on_touch_up: app.root.ids.add_expertise_screen.get_new_left_right_values(slider.value)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}


        MDFlatButton:
            id: next_button
            text: "next"
            on_release: app.root.ids.add_expertise_screen.next()
            pos_hint: {"center_x": 0.5, "center_y": 0.4}

        MDFlatButton:
            id: save_button
            disabled: True
            opacity: 0
            text: "save"
            on_release: app.change_screen("save_screen", "None")
            pos_hint: {"center_x": 0.5, "center_y": 0.4}