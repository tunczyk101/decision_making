<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)
    color_inactive: "pink"


<StartScreen>:
    FloatLayout:
        MDTopAppBar:
            title: "Hello ice-crem fan!"
            right_action_items: [['close', lambda x: exit(0)]]
            md_bg_color: app.theme_cls.primary_light
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .1

        Image:
            id: main_photo
            size_hint_x: .5
            size_hint_y: .25
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            radius: [36, 36, 36, 36, ]
            source: "img/customer_logo.jpg"


        MDRoundFlatIconButton:
            icon: 'ice-cream'
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: app.change_screen("choosecategories_screen", "up", "pop")
            text: "Start!"

        MDLabel:
            text: "EVM"
            pos_hint: {"center_x": 0.3, "center_y": 0.25}
            halign: "center"

        Check:
            id: first
            active: True
            pos_hint: {'center_x': .3, 'center_y': .2}
            on_active: app.choose_metchod("EVM", self.active)


        MDLabel:
            text: "GMM"
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            halign: "center"

        Check:
            id: second
            pos_hint: {'center_x': .5, 'center_y': .2}
            on_active: app.choose_metchod("GMM", self.active)

        MDLabel:
            text: "LLSM"
            pos_hint: {"center_x": 0.7, "center_y": 0.25}
            halign: "center"

        Check:
            id: third
            pos_hint: {'center_x': .7, 'center_y': .2}
            on_active: app.choose_metchod("LLVM", self.active)
